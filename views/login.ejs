<%- include('layouts/header') %>
<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh; margin-top: -50px;">
<div id="loginForm" class="col-md-3">
    <h2>Patient Login</h2>
    <form action="/patient/login" method="post">
        <!-- Email -->
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" required>
        </div>

        <!-- Password -->
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>

        <button type="submit" class="btn btn-primary">Login as Patient</button>
    </form>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7"></script>

</body>

</html>